<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CyberSimPassword">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="409dp"
        android:layout_height="361dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/passwordfinal" />

    <ImageView
        android:id="@+id/pew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backtext" />

    <EditText
        android:id="@+id/passwordChecker"
        android:layout_width="113dp"
        android:layout_height="36dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="80dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="62dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btnblack"
        android:text="enter"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordChecker"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/passwordChecker"
        app:layout_constraintTop_toBottomOf="@+id/passwordChecker" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="296dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/lato_bold"
        android:text="Create a strong password using a combination of letters and numbers."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passwordScoreLbl"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/topflap"
        android:fontFamily="@font/lato_bold"
        android:gravity="center_vertical|center"
        android:text="xxx"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>