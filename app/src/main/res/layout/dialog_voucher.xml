<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/moneyBadge3Lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Confirmation"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="407dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voucherCancelBtn" />

    <TextView
        android:id="@+id/houseBadge1Lbl"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Are you sure you want to spend 1500 coins on this voucher?"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/moneyBadge3Lbl"
        app:layout_constraintStart_toStartOf="@+id/moneyBadge3Lbl"
        app:layout_constraintTop_toBottomOf="@+id/moneyBadge3Lbl" />

    <Button
        android:id="@+id/voucherConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:text="confirm"
        android:textColor="#F8F8F8"
        app:layout_constraintEnd_toEndOf="@+id/houseBadge1Lbl"
        app:layout_constraintStart_toEndOf="@+id/voucherCancelBtn"
        app:layout_constraintTop_toBottomOf="@+id/houseBadge1Lbl" />

    <Button
        android:id="@+id/voucherCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/houseBadge1Lbl"
        app:layout_constraintTop_toBottomOf="@+id/houseBadge1Lbl" />

</androidx.constraintlayout.widget.ConstraintLayout>