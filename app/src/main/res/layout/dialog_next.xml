<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedbackDialogBg"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/blue">

    <Button
        android:id="@+id/DialogFeedbackBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnblack"
        android:text="CONTINUE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/dialogFeedbackDesc"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/dialogFeedbackDesc"
        app:layout_constraintTop_toBottomOf="@+id/dialogFeedbackDesc" />

    <TextView
        android:id="@+id/dialogFeedbackDesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="badge_description"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/dialogFeedbackLbl"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/dialogFeedbackLbl"
        app:layout_constraintTop_toBottomOf="@+id/icon" />

    <TextView
        android:id="@+id/dialogFeedbackLbl"
        android:layout_width="415dp"
        android:layout_height="72dp"
        android:background="@drawable/blackflap"
        android:fontFamily="@font/lato_bold"
        android:gravity="center_vertical|center"
        android:text="Choice Feedback"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DialogFeedbackBtn" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogFeedbackLbl"
        app:srcCompat="@drawable/tickker" />

</androidx.constraintlayout.widget.ConstraintLayout>